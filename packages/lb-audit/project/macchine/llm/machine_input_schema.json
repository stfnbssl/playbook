{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Machine Audit Input",
  "type": "object",
  "required": [
    "machine",
    "context",
    "zones",
    "components"
  ],
  "properties": {
    "machine": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "use_case": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "properties": {
        "essential_service": {
          "type": "boolean"
        },
        "personal_data": {
          "type": "boolean"
        },
        "safety_critical": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "targets": {
      "type": "object",
      "properties": {
        "sl_t": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        }
      },
      "additionalProperties": false
    },
    "zones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "critical": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "conduits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "protocols": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "direction": {
            "type": "string",
            "enum": [
              "bidirectional",
              "egress",
              "ingress"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "remote_access": {
      "type": "object",
      "properties": {
        "exists": {
          "type": "boolean"
        },
        "method": {
          "type": "string"
        },
        "vendors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "zone"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "embedded",
              "network",
              "host",
              "application"
            ]
          },
          "vendor": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "zone": {
            "type": "string"
          },
          "sl_c": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
          },
          "firmware": {
            "type": "string"
          },
          "os": {
            "type": "string"
          },
          "protocols": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "legacy_os": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "downtime": {
          "type": "string",
          "enum": [
            "none",
            "limited",
            "normal"
          ]
        },
        "legacy_os": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
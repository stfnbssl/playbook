{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",      // o "NodeNext"
    "esModuleInterop": true,
    "skipLibCheck": true,               // importante per disinnescare mismatch tipizzazioni transitive
    "typeRoots": ["./src/types", "./node_modules/@types"],  // utile per eventuale shim
    "types": ["vite/client", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}


